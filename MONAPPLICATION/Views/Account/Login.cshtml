
@model MONAPPLICATION.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f5f5f5;
    }

    .login-form {
        width: 100%;
        max-width: 500px;
        padding: 2em;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        background-color: white;
    }

        .login-form h2 i {
            margin-right: 8px;
            color: #2980b9;
        }

        .login-form h2 {
            margin-bottom: 1em;
            text-align: center;
            color: #2c3e50;
        }

        .login-form input {
            width: 100%;
            padding: 0.75em;
            margin-bottom: 1em;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1em;
        }

        .login-form button {
            width: auto;
            padding: 0.5em 2em;
            font-size: 1.5em;
            background-color: #2980b9;
            color: white;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: block;
            margin: 0 auto;
        }

            .login-form button:hover {
                background-color: #1f5f8b;
                transform: scale(1.05);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .login-form .alert-danger {
            margin-top: 1em;
            padding: 1em;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
        }
</style>

<div class="login-container">
    

    <form asp-action="Login" method="post" class="login-form">
        <h2><i class="fa-solid fa-user"></i></h2>

        <h2>Bienvenue</h2>

        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Entrez votre email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Entrez votre mot de passe" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit">Se connecter</button>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
