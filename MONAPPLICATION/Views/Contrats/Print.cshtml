
@model MONAPPLICATION.Models.Contrat

<div class="container mt-4">
    <h1 class="page-title">Détails du Contrat</h1>
    <p><strong>Type de Contrat:</strong> @Model.TypeContrat</p>
    <p><strong>Date Début:</strong> @Model.DateDebut.ToShortDateString()</p>
    <p><strong>Date Fin:</strong> @(Model.DateFin != null ? Model.DateFin.ToShortDateString() : "N/A")</p>
    <p><strong>Salaire:</strong> @Model.Salaire.ToString("C")</p>
    <p><strong>Utilisateur:</strong> @(Model.Utilisateur != null ? Model.Utilisateur.Nom : "Aucun employé")</p>

    <script>
        window.onload = function() {
            window.print();
        };
    </script>   
</div>

<style>
    .page-title {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
        color: #343a40;
    }

    .container {
        font-size: 1rem;
        color: #333;
    }

    .container p {
        margin: 5px 0;
    }
</style>
